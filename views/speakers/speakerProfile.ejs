<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs") -%>
    <title>Speaker profile</title>

</head>

<body>
   
    <%- include("../partials/userNav.ejs",{id:data._id}) -%>
    <div class="container">
        <div class="row mt-5">
            <div class="col-10 m-auto">
                <form action="/speaker/edit" method="POST">
                    <div class="row">
                        <div class="col">
                            <label for="speakerID">ID</label>
                            <input type="text" class="form-control" id="speakerID" value="<%=data._id%>" name="_id" placeholder="Enter name"
                                readonly>
                        </div>
                        <div class="col">
                            <label for="name">First name</label>
                            <input type="text" class="form-control" value="<%=data.fullName.fName%>" name="name" placeholder="Enter name"
                                >
                        </div>
                        <div class="col">
                            <label for="name">Last name</label>
                            <input type="text" class="form-control" value="<%=data.fullName.lName%>" name="name" placeholder="Enter name"
                                >
                        </div>
                      
                        <div class="col">
                            <label for="age">Age</label>
                            <input type="number" class="form-control" name="age" value="<%=data.age%>">
                        </div>
                    </div>
                    <!-- <h2 class="my-3">Address</h2> -->
                    <div class="row">
                        <div class="col">
                            <label for="street">password</label>
                            <input type="text" class="form-control" value="<%=data.password%>"  name="password" placeholder="Enter street"
                                >
                        </div>
                        <div class="col">
                            <label for="street">street</label>
                            <input type="text" class="form-control" value="<%=data.address.street%>"  name="street" placeholder="Enter street"
                                >
                        </div>
                        <div class="col">
                            <label for="city">city</label>
                            <input type="text" class="form-control" value="<%=data.address.city%>"  name="city" placeholder="Enter city"
                                >
                        </div>
                        <div class="col">
                            <label for="country">country</label>
                            <input type="text" class="form-control"  name="country" value="<%=data.address.country%>" placeholder="Enter name"
                                >
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input class="mt-3 btn btn-primary" type="submit" value="sumbit">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>